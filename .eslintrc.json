{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "no-undef": "off",
        "eqeqeq": "error",
        "prefer-const": "error"
    }
}
